@model IEnumerable<rc.Domain.StaffProfile>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<div class="row">
    <p>
        @Html.ActionLink("Create New", "CreateEmployee", "Account", null, new { @class="btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffPPSNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StaffEmail)
            </th>
         
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffPPSNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StaffEmail)
                </td>
               
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.StaffProfileID }, new { @class = "btn btn-primary  btn-xs" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.StaffProfileID }, new { @class = "btn btn-warning  btn-xs" })
                </td>
            </tr>
        }

    </table>
</div>